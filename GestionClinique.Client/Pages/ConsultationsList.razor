@page "/consultations"
@inject HttpClient Http

<PageTitle>Consultations</PageTitle>

<h1>Liste des Consultations</h1>

<p>
    <a href="consultations/create" class="btn btn-primary">Nouvelle Consultation</a>
</p>

@if (consultations == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Rendez-Vous</th>
                <th>Diagnostic</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consultation in consultations)
            {
                <tr>
                    <td>@consultation.DateConsultation.ToString("g")</td>
                    <td>RDV #@consultation.RendezVousId</td>
                    <td>@consultation.Diagnostic</td>
                    <td>@consultation.Notes</td>
                    <td>
                        <a href="consultations/edit/@consultation.Id" class="btn btn-secondary btn-sm">Editer</a>
                        <button class="btn btn-danger btn-sm" @onclick="@(() => DeleteConsultation(consultation.Id))">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Consultation>? consultations;

    protected override async Task OnInitializedAsync()
    {
        await LoadConsultations();
    }

    private async Task LoadConsultations()
    {
        consultations = await Http.GetFromJsonAsync<List<Consultation>>("api/consultations");
    }

    private async Task DeleteConsultation(int id)
    {
         await Http.DeleteAsync($"api/consultations/{id}");
         await LoadConsultations();
    }
}
