@page "/medicaments/create"
@page "/medicaments/edit/{id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>@(Id == 0 ? "Créer" : "Modifier") Médicament</PageTitle>

<h1>@(Id == 0 ? "Nouveau" : "Modifier") Médicament</h1>

<EditForm Model="@medicament" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="nom" class="form-label">Nom</label>
        <InputText id="nom" class="form-control" @bind-Value="medicament.Nom" />
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <InputTextArea id="description" class="form-control" @bind-Value="medicament.Description" rows="3" />
    </div>

    <div class="mb-3">
        <label for="prix" class="form-label">Prix</label>
        <InputNumber id="prix" class="form-control" @bind-Value="medicament.Prix" />
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="medicaments" class="btn btn-secondary">Annuler</a>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }

    private Medicament medicament = new Medicament();

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var result = await Http.GetFromJsonAsync<Medicament>($"api/medicaments/{Id}");
            if (result != null)
            {
                medicament = result;
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        if (Id == 0)
        {
            await Http.PostAsJsonAsync("api/medicaments", medicament);
        }
        else
        {
            await Http.PutAsJsonAsync($"api/medicaments/{Id}", medicament);
        }

        Navigation.NavigateTo("medicaments");
    }
}
