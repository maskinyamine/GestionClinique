@page "/patients"
@using GestionClinique.Shared.Models
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Patients</PageTitle>

<h1>Liste des Patients</h1>

<p>
    <a href="patients/create" class="btn btn-primary">Nouveau Patient</a>
</p>

@if (patients == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in patients)
            {
                <tr>
                    <td>@patient.Nom</td>
                    <td>@patient.Prenom</td>
                    <td>@patient.Email</td>
                    <td>@patient.Telephone</td>
                    <td>
                        <a href="patients/edit/@patient.Id" class="btn btn-secondary btn-sm">Editer</a>
                        <button class="btn btn-danger btn-sm" @onclick="@(() => DeletePatient(patient.Id))">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Patient>? patients;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        patients = await Http.GetFromJsonAsync<List<Patient>>("api/patients");
    }

    private async Task DeletePatient(int id)
    {
        if (await ShouldConfirmDelete())
        {
             await Http.DeleteAsync($"api/patients/{id}");
             await LoadPatients();
        }
    }
    
    // Simple JS method for confirm could be added, or just basic delete for now.
    // We will assume immediate delete for simplicity or add JS interop later if requested to be fancy.
    private Task<bool> ShouldConfirmDelete() => Task.FromResult(true); 
}
